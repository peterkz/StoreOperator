<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_size"
        android:background="@color/title_color">

        <RelativeLayout
            android:id="@+id/titleR"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxEms="13"
                android:singleLine="true"
                android:text="用户名"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/title_text"
                android:src="@drawable/down"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title_textTab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:text="帐户"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/back_blue_background"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:text="退出"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/menu_image"
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/menu"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vouch"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/back_blue_background"
            android:visibility="gone">

            <TextView
                android:id="@+id/vouch_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:text="统计"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:visibility="visible" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:textColor="#000000">

        <com.wetoop.storeoperator.ui.widget.MyViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomBar"
            android:layout_alignParentTop="true" />

        <com.wetoop.storeoperator.bottombar.BottomBar
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            app:bb_tabXmlResource="@xml/bottombar_tabs_three" />
    </RelativeLayout>
    <TextView
        android:id="@+id/menuBackground"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_transparent"
        android:visibility="gone"/>
</RelativeLayout>